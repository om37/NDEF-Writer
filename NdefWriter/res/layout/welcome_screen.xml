<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    tools:context=".WelcomeActivity" >
    
    <TextView android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/welcome"
        
        android:layout_marginBottom="10dp"
        />
    
    <EditText android:id="@+id/txtToWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/writeBoxHint"
        
        android:layout_marginBottom="10dp"
        />
        
    <Button android:id="@+id/btnWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btnWriterString"
        android:onClick="writeButton"
        />
    
    <TextView android:id="@+id/txtWriteMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:text="@string/writeMode"
        
        android:layout_marginBottom="10dp"
        />

</LinearLayout>
